#!/usr/bin/env bash

# Start
echo "$(basename "$0") starting."

# Ask for the administrator password upfront
sudo -v

# Make sure weâ€™re using the latest Homebrew
brew update

# Upgrade any already-installed formulae
brew upgrade

# install applications
for i in $(cat applications/brew/apps.txt)
do
    brew install "$i"
done


brew install aspell --with-lang-en --with-lang-fr
brew install vim --with-custom-python
brew install weechat --with-python --with-perl --with-aspell

# gnu

brew install gnu-sed --with-default-names
brew install gnu-tar --with-default-names

# install additional completion files
brew tap homebrew/completions
for i in $(cat applications/brew/completions.txt)
do
    brew install "$i"
done


# applications that are not immediately needed
#brew install ant
#brew install ant-contrib
#brew install github-markdown-toc
#brew install gradle
#brew install gradle-completion
#brew install jq

# cleanup unneeded files
brew cleanup

# Finished
echo "$(basename "$0") complete."
