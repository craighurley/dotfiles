#!/usr/bin/env bash

isWorkMachine=false

# Start
echo "$(basename "$0") starting."

read -r -p "Is this a work machine? (y/n) " -n 1
echo
if [[ $REPLY =~ ^[Yy]$ ]] ; then
    isWorkMachine=true
fi

# homebrew options
export HOMEBREW_CASK_OPTS="--require-sha"

# Ask for the administrator password upfront
sudo -v

# setup taps
brew tap caskroom/fonts
brew tap caskroom/cask

# install applications
#brew cask install --require-sha balsamiq-mockups
brew cask install --require-sha appcleaner
brew cask install --require-sha dash
brew cask install --require-sha docker
brew cask install --require-sha firefox
brew cask install --require-sha flux
brew cask install --require-sha hyperswitch
brew cask install --require-sha iterm2
brew cask install --require-sha java
brew cask install --require-sha kaleidoscope
brew cask install --require-sha keepassxc
brew cask install --require-sha pycharm-ce
brew cask install --require-sha skype
brew cask install --require-sha snagit
brew cask install --require-sha sourcetree
brew cask install --require-sha spideroakone
brew cask install --require-sha stay
brew cask install --require-sha sublime-text
brew cask install --require-sha totalspaces
brew cask install --require-sha vagrant
brew cask install --require-sha virtualbox
brew cask install --require-sha virtualbox-extension-pack
brew cask install --require-sha wireshark

# if this is not a work machine
if [[ $isWorkMachine == false ]] ; then
    brew cask install --require-sha adobe-photoshop-lightroom
    brew cask install --require-sha dropbox
    brew cask install --require-sha vlc
fi

# install fonts
brew cask install --require-sha font-hasklig
brew cask install --require-sha font-source-code-pro
brew cask install --require-sha font-source-code-pro-for-powerline

# cleanup unneeded files
brew cleanup

# Finished
echo "$(basename "$0") complete."
