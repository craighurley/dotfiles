# red:          $(tput setaf 1)
# green:        $(tput setaf 2)
# yellow:       $(tput setaf 3)
# blue:         $(tput setaf 4)
# magenta:      $(tput setaf 5)
# cyan:         $(tput setaf 6)
# white:        $(tput setaf 7)
# bold:         $(tput bold)
# underline:    $(tput sgr 0 1)
# reset:        $(tput sgr0)

# for information on the git prompt, see: https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWSTASHSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWUPSTREAM=auto
export GIT_PS1_SHOWCOLORHINTS=1

#export PS1='\n\[$(tput setaf 4)\]localhost\[$(tput sgr0)\] \[$(tput setaf 3)\]\t\[$(tput sgr0)\]: \w\n\$ '
export PS1='\n\[$(tput setaf 6)\]\u\[$(tput setaf 7)\]@\[$(tput setaf 5)\]\h\[$(tput sgr0)\]: \w\n\$ '
#PROMPT_COMMAND='__git_ps1 "\n\[$(tput setaf 4)\]localhost\[$(tput sgr0)\]: \w" "\n\$ "'
PROMPT_COMMAND='__git_ps1 "\n\[$(tput setaf 6)\]\u\[$(tput setaf 7)\]@\[$(tput setaf 4)\]\h\[$(tput sgr0)\]: \w" "\n\$ "'
