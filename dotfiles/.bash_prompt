# for information on the git prompt, see: https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh
export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWSTASHSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWUPSTREAM=auto
export GIT_PS1_SHOWCOLORHINTS=1

# colour vars
GREY='\[\e[1;30m\]'
RED='\[\e[0;31m\]'
WHITE='\[\e[1;37m\]'
YELLOW='\[\e[1;33m\]'
RESET='\[\e[0m\]'

function info_date {
    echo -en "${GREY}$(date +%H:%M:%S)${RESET}"
}

function info_dir {
    if dirs +0 | grep -qe "^~" ; then
        echo -en "${WHITE}$(dirs +0)${RESET}"
    else
        echo -en "${RED}$(dirs +0)${RESET}"
    fi
}

function client_profile {
    if [[ -n "$CLIENTID" ]] ; then
        echo -en " <${RED}$CLIENTID${RESET}>"
    fi
}

function prompt {
    echo -en "${RED}\$ ${RESET}"
}

function python_virtualenv {
    if [[ -n "$VIRTUAL_ENV" ]] ; then
        if [[ $(basename "$VIRTUAL_ENV") != "default" ]] ; then
            echo -en " [${YELLOW}$(basename "$VIRTUAL_ENV")${RESET}]"
        fi
    fi
}

if [[ -f $(command -v git) ]] ; then
    PROMPT_COMMAND='__git_ps1 "\n$(info_date)$(client_profile)$(python_virtualenv)" " $(info_dir)\n$(prompt)"'
else
    PROMPT_COMMAND='PS1="\n$(info_date)$(client_profile)$(python_virtualenv) $(info_dir)\n$(prompt)"'
fi

export PS4='$0.$LINENO: '
