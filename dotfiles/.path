# brew
if [[ -d "/opt/homebrew/bin/" ]] ; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
elif [[ -d "/usr/local/bin/" ]] ; then
    eval "$(/usr/local/bin/brew shellenv)"
fi

# custom scripts and binaries
pathaddend "$HOME/.scripts"
pathaddend "$HOME/bin"

# oracle sqlplus
pathaddend "$HOME/Applications/Oracle/instaclient"

# jmeter
pathaddend "$PATH:$HOME/Applications/apache-jmeter/bin"

# # openssl: before default $PATH
# pathaddstart "$(brew --prefix)/opt/openssl/bin"

# gnu: before default $PATH
# pathaddstart "$(brew --prefix)/opt/gnu-sed/libexec/gnubin"
# pathaddstart "$(brew --prefix)/opt/gnu-tar/libexec/gnubin"

export PATH

if [[ $(echo $SHELL | grep zsh) ]] ; then
    typeset -U path
fi
