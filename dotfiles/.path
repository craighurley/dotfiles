# brew installs to sbin and bin
[[ -d $(brew --prefix)/sbin ]] && PATH="$PATH:$(brew --prefix)/sbin"
[[ -d $(brew --prefix)/bin ]] && PATH="$PATH:$(brew --prefix)/bin"

# custom scripts and binaries
[[ -d "$HOME/.scripts" ]] && PATH="$PATH:$HOME/.scripts"
[[ -d "$HOME/bin" ]] && PATH="$PATH:$HOME/bin"

# oracle sqlplus
[[ -d "$HOME/Applications/Oracle/instaclient" ]] && PATH="$HOME/Applications/Oracle/instaclient:$PATH"

# jmeter
[[ -d "$HOME/Applications/apache-jmeter/bin" ]] && PATH="$HOME/Applications/apache-jmeter/bin:$PATH"

# Path to git diff utility.  Add the following to ~/.gitconfig - TODO: remove
# [pager]
#     log = diff-highlight | less
#     show = diff-highlight | less
#     diff = diff-highlight | less
[[ -d $(brew --prefix)/opt/git/share/git-core/contrib/diff-highlight ]] && PATH="$(brew --prefix)/opt/git/share/git-core/contrib/diff-highlight:$PATH"

# openssl
[[ -d $(brew --prefix)/opt/openssl/bin ]] && PATH="$(brew --prefix)/opt/openssl/bin:$PATH"

# gnu
[[ -d $(brew --prefix)/opt/gnu-sed/libexec/gnubin ]] && PATH="$(brew --prefix)/opt/gnu-sed/libexec/gnubin:$PATH"
[[ -d $(brew --prefix)/opt/gnu-tar/libexec/gnubin ]] && PATH="$(brew --prefix)/opt/gnu-tar/libexec/gnubin:$PATH"

export PATH
