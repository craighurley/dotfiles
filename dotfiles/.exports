# Make nano the default editor
export EDITOR="vim"

# bash history
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoreboth:erasedups
export HISTIGNORE="pwd:exit:man *"

# Use UTF-8
export LANG="en_NZ"
export LC_ALL="en_NZ.UTF-8"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"

# grep defaults
export GREP_OPTIONS="--color=auto -I --exclude-dir=.git --exclude-dir=.svn --exclude-dir=.metadata --exclude=.DS_Store"

# Link Homebrew casks in `/Applications` rather than `~/Applications`
export HOMEBREW_CASK_OPTS="--appdir=/Applications"

# don't display homebrew emoji
export HOMEBREW_NO_EMOJI=1

# Add required exports for boot2docker to work
export DOCKER_HOST=tcp://192.168.59.103:2376
export DOCKER_CERT_PATH=~/.boot2docker/certs/boot2docker-vm
export DOCKER_TLS_VERIFY=1
