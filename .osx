###############################################################################

# Set computer name (as done via System Preferences → Sharing)
sudo scutil --set ComputerName "REPLACEME"
sudo scutil --set HostName "REPLACEME"
sudo scutil --set LocalHostName "REPLACEME"
sudo defaults write /Library/Preferences/SystemConfiguration/com.apple.smb.server NetBIOSName -string "REPLACEME"

# Disable the sound effects on boot.  To re-enable: sudo nvram -d SystemAudioVolume
# macbook pro late 2012 + os x 10.9
sudo nvram SystemAudioVolume="%80"
# macbook pro late 2011 + os x 10.9
#sudo nvram SystemAudioVolume=" "

# Enable verbose botting
sudo nvram boot-args="-v"

# Menu bar: disable transparency
defaults write NSGlobalDomain AppleEnableMenuBarTransparency -bool false

# Menu bar: show remaining battery as a percentage
defaults write com.apple.menuextra.battery ShowPercent -string "YES"

# Menu bar: hide the Volume icons and bluetooth
